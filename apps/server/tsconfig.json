{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "isolatedModules": true, // Bun requires this
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
